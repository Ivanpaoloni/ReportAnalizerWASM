@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
            <MudPopoverProvider /> <MudDialogProvider />
            <MudSnackbarProvider />

            <MudLayout>
                <MudAppBar Elevation="1">
                    <MudText Typo="Typo.h5" Class="ml-3">Panel Financiero</MudText>
                    <MudSpacer />

                    <MudTooltip Text="@(_isDarkMode ? "Cambiar a Modo Claro" : "Cambiar a Modo Oscuro")">
                        <MudIconButton Icon="@(_isDarkMode? Icons.Material.Filled.Brightness7 : Icons.Material.Filled.Brightness4)"
                                       Color="Color.Inherit"
                                       OnClick="@((e) => _isDarkMode = !_isDarkMode)" />
                    </MudTooltip>
                </MudAppBar>

                <MudMainContent>
                    <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
                        @Body
                    </MudContainer>
                </MudMainContent>
            </MudLayout>
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool _isDarkMode = false;
    private MudTheme _theme = new MudTheme();
}